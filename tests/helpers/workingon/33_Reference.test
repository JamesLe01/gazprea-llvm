// Tests the reference and copy

typedef integer int;

procedure reference(var int i /* Should be referenced*/, const real test /* Should be copied*/) {
    i -> std_out; // Should print 120
    '\n' -> std_out;

    i = 2120;
}

procedure reference2(var int a) {
    a -> std_out; // Should print 10
    '\n' -> std_out;
    a = 50;
}

procedure swap(var int a, var int b) {
    const int temp = a;
    a = b;
    b = temp;
}

procedure main() returns int {
    var int i = 120;
    const real b = 150.5;

    call reference(i, b);

    i -> std_out; // Should print 2120
    '\n' -> std_out;


    const int a = 10;
    call reference2(a);

    a -> std_out; // Should print 10
    '\n' -> std_out;

    var x = 50;
    var y = 20;

    call swap(x, y);

    x -> std_out; ' ' -> std_out; y -> std_out; // Should print 20 50

    '\n' -> std_out;

    return 0;
}